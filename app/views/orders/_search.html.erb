<div class='row search-fields'>
  <%= form_tag orders_path, method: :get do %>
    <div class='col-sm-10'>
      <%= label_tag 'q', 'Search Orders' %>
      <%= text_field_tag 'q', params[:q] || '', placeholder: 'Terms', class: 'form-control' %>
    </div>

    <div class='col-sm-2'>
      <br />
      <%= button_tag class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-search"></i> Search
      <% end %>
    </div>
  <% end %>
</div>
