<% if current_user.admin? %>
  <%= render 'preproduction_notes_trains/form', preproduction_notes_train: object, in_modal: in_modal %>
<% else %>
  <%= render 'preproduction_notes_trains/details', preproduction_notes_train: object %>
<% end %>

<% if in_modal %>
  <%= link_to 'Full view', show_train_path(object), class: 'btn btn-primary' %>
<% else %>
  <%= link_to 'Order', order_path(object.order), class: 'btn btn-primary' %>
<% end %>
