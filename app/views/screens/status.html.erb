<h1>Screen Lookup</h1>

<%= form_tag lookup_screens_path, remote: true, method: :get, id: 'screen-lookup' do  %>
    <div class="form-group">
      <%= text_field_tag :id, '', class: 'form-control', id: 'screen-id' %>
    </div>

    <%= submit_tag 'Look Up Screen', class: 'btn btn-primary' %>
<% end %>

<h2>Screen Status</h2>

<table class="table table-striped" data-sortable="true">
  <thead>
  <tr>
    <th>Frame Type</th>
    <th>Dimensions</th>
    <th>Mesh Type</th>
    <th>State</th>
    <th>Count</th>
  </tr>
  </thead>

  <tbody>
  <% @screens.each do |screen| %>
      <tr>
        <td><%= screen.frame_type %></td>
        <td><%= screen.dimensions %></td>
        <td><%= screen.mesh_type %></td>
        <td><%= screen.human_state_name.titleize %></td>
        <td><%= screen.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

