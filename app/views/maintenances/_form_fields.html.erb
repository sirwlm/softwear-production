<%= f.text_field :name %>
<%= f.text_area :description %>
<%= f.select :machine_id, (@machines || Machine.all).collect{ |machine| [machine.name, machine.id] }, { include_blank: 'Select Machine' } %>
<%= f.number_field :estimated_time, step: 'any', label: 'Estimated Time in Hours' %>
<% unless maintenance.new_record? %>
  <%= f.text_field :completed_at, class: 'datetimepicker-standard' %>
<% end %>

