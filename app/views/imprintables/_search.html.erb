<div class='row search-fields'>
  <%= form_tag imprintable_dashboard_path, method: :get do %>
    <div class='col-sm-4'>
      <%= label_tag 'q[text]', 'Search Terms' %>
      <%= text_field_tag 'q[text]', params[:q] ? params[:q][:text] : '', placeholder: 'Terms', class: 'form-control' %>
    </div>

    <div class="col-sm-2">
      <%= label_tag 'q[state]', 'State' %>
      <%= select_tag 'q[state]', options_for_select(ImprintableTrain.train_machine.states.map { |s| [s.name.to_s.humanize, s.name] }, params[:q] ? params[:q][:state] : ''), class: 'form-control select2', multiple: true, data: { width: '100%' }  %>
    </div>

    <div class="col-sm-2">
      <%= label_tag 'q[expected_arrival_date]', 'Expected Arrival' %>
      <%= text_field_tag 'q[expected_arrival_date]', params[:q] ? params[:q][:expected_arrival_date] : '', class: 'form-control datepicker-standard'  %>
    </div>

    <div class='col-sm-2 text-right'>
      <br />
      <%= button_tag class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-search"></i> Search
      <% end %>
    </div>
  <% end %>
</div>
