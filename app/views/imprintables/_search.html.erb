<div class='search-fields'>
  <%= form_tag imprintable_dashboard_path, method: :get do %>
    <div class='row'>
      <div class='col-sm-10'>
        <%= label_tag 'q[text]', 'Search Terms' %>
        <%= text_field_tag 'q[text]', params[:q] ? params[:q][:text] : '', placeholder: 'Terms', class: 'form-control' %>
      </div>

      <div class="col-sm-2">
        <%= label_tag 'q[expected_arrival_date]', 'Expected Arrival' %>
        <%= text_field_tag 'q[expected_arrival_date]', params[:q] ? params[:q][:expected_arrival_date] : '', class: 'form-control datepicker-standard'  %>
      </div>
    </div>

    <div class='row'>
      <div class="col-sm-4">
        <%= label_tag 'q[state]', 'Imprintable Train State' %>
        <%= select_tag 'q[state]', options_for_select(ImprintableTrain.train_machine.states.map { |s| [s.name.to_s.humanize, s.name] }, params[:q] ? params[:q][:state] : ''), class: 'form-control select2', multiple: true, data: { width: '100%' }  %>
      </div>

      <div class="col-sm-2">
        <%= label_tag 'q[order_state]', 'Order State' %>
        <%= select_tag 'q[order_state]', options_for_select(['Pending', 'Complete', ''], params[:q] ? params[:q][:order_state] : ''), class: 'form-control select2', data: { width: '100%' }  %>
      </div>

      <div class="col-sm-2">
        <%= label_tag 'q[order_imprint_state]', 'Order Imprint State' %>
        <%= select_tag 'q[order_imprint_state]', options_for_select(['Pending', 'Printed', ''], params[:q] ? params[:q][:order_imprint_state] : ''), class: 'form-control select2', data: { width: '100%' }  %>
      </div>


      <div class="col-sm-2">
        <%= label_tag 'q[job_state]', 'Job State' %>
        <%= select_tag 'q[job_state]', options_for_select(['Pending', 'Complete', ''], params[:q] ? params[:q][:job_state] : ''), class: 'form-control select2', data: { width: '100%' }  %>
      </div>

      <div class="col-sm-2">
        <%= label_tag 'q[job_imprint_state]', 'Job Imprint State' %>
        <%= select_tag 'q[job_imprint_state]', options_for_select(['Pending', 'Printed', ''], params[:q] ? params[:q][:job_imprint_state] : ''), class: 'form-control select2', data: { width: '100%' }  %>
      </div>
    </div>

    <div>
      <br />
      <%= button_tag class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-search"></i> Search
      <% end %>
    </div>
  <% end %>
</div>
