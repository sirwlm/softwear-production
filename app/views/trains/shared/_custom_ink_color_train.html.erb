
<% if current_user.role?('admin') %>
  <%= render 'custom_ink_color_trains/form', custom_ink_color_train: train %>
<% else %>
  <%= render 'custom_ink_color_trains/details', custom_ink_color_train: train %>
<% end %>

<% if in_modal %>
  <%= link_to 'Full view', show_train_path(train), class: 'btn btn-primary' %>
<% else %>
  <%= link_to 'Order', order_path(train.order), class: 'btn btn-primary' %>
<% end %>
