<div class="row">
  <div class="col-xs-12">

    <div class='col-xs-4'>
      <% # TODO actually check if the view exists rather than rescuing %>
      <%= render "shared/#{@object.model_name.element}_details", object: @object rescue nil %>
    </div>

    <div class='col-xs-8'>
      <% if flash[:notice] %><p class="alert alert-success flash-notice"><%= flash[:notice] %></p><% end %>

      <div id='transition-state' class='row'>
        <%= render 'shared/train_transitions', object: @object %>
      </div>

    </div>
  </div>

</div>
