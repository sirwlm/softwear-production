<!DOCTYPE html>
<html>
<head>
  <title>SoftWEAR Production Manager</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% unless current_user.nil? %>
  <%= render 'shared/top_nav', current_user: current_user %>
<% end %>

<div class="<%= layout_container_type(@container_type) %>">
    <% flash.each do |key, val| %>
      <%= render 'shared/flash', key: key, val: val %>
    <% end %>
    <%= yield %>
</div>

<!-- Modal -->
<div class="modal fade" id="contentModal" tabindex="-1" role="dialog" aria-labelledby="contentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Please set the modal title before invoking the content modal, you dirty animal.</h4>

      </div>
      <div class="modal-body"><div class="te"></div></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
</body>
</html>
