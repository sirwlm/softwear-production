<div class="row">
  <div class="col-xs-12">

    <div class='col-xs-4'>
      <%= render 'shared/imprint_details', object: @imprint %>
    </div>

    <div class='col-xs-8'>
      <% if flash[:notice] %><p class="alert alert-success flash-notice"><%= flash[:notice] %></p><% end %>

      <% if @imprint.require_manager_signoff? %>
        <p class="alert alert-warning flash-notice col-xs-12">
        This Imprint Requires Signoff
        </p>
      <% end %>

      <% unless @imprint.softwear_crm_id.blank? %>
        <% begin %>
          <%= render 'imprints/artwork', imprint: @imprint.crm %>
        <% rescue StandardError => e %>

          <% Rails.logger.error "**** ERROR RETRIEVING PROOF INFORMATION ****\n#{e.class.name}: #{e.message}" %>
          <% Rails.logger.error e.backtrace.join("\n") %>

          <span class='text-danger'>There was an issue retrieving proof information from crm.</span>
          <%= content_tag :code do %>
            <%= "#{e.class.name}: #{e.message}" %>
          <% end %>
        <% end %>
      <% end %>

      <div id='transition-state' class='row'>
        <%= render 'imprints/transition_state', imprint: @imprint %>
      </div>

    </div>
  </div>


</div>
