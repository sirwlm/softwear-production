<%= f.text_field :name %>
<%= f.text_area :description %>
<%= f.select :machine_id, @machines.collect{ |machine| [machine.name, machine.id] }, { include_blank: 'Select Machine' } %>
<%= f.select :type, options_for_select([['Print', 'Print'], ['Screen Print', 'ScreenPrint']], f.object.type) %>
<%= f.number_field :estimated_time, step: 'any', label: 'Estimated Time in Hours' %>
<%= f.number_field :count, step: 'any', label: 'Machine Print Count' %>
<%= f.form_group :require_manager_signoff, label: { text: "Require manager signoff?" } do %>
  <%= f.radio_button :require_manager_signoff, false, label: "No", inline: true, checked: !imprint.require_manager_signoff? %>
  <%= f.radio_button :require_manager_signoff, true, label: "Yes", inline: true, checked: imprint.require_manager_signoff?  %>
<% end %>

<%= f.select :job_id, Job.unscoped.collect{ |j| [j.name, j.id] }, { include_blank: 'Select Machine' }, class: 'select2' %> 

<% unless imprint.new_record? %>
  <%= f.text_field :completed_at, class: 'datetimepicker-standard' %>
<% end %>
