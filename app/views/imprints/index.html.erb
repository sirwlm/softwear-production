<h1>Listing imprints</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Info</th>
      <th>Machine</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @imprints.each do |imprint| %>
      <tr>
        <td><%= imprint.id %></td>
        <td>
            <h4><%= imprint.name %></h4>
            <p><%= imprint.description %></p>
            <% if imprint.scheduled? %>
                <p><%= imprint.scheduled_at.strftime('%Y-%m-%d %I:%M%P') %>, <%= imprint.estimated_time %>hrs</p>
            <% else %>
              <p>Unscheduled</p>
            <% end %>
        </td>
        <td><%= imprint.machine_name %></td>
        <td><%= link_to 'Show', imprint %>
        <%= link_to 'Edit', edit_imprint_path(imprint) %>
        <%= link_to 'Destroy', imprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Imprint', new_imprint_path %>
