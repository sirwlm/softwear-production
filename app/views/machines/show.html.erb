<h1 class="heading"><%= @machine.name %> Production Schedule</h1>
<hr />
<div class="row">
  <div class="col-lg-3">
    <div class="unscheduled-imprints">
      <h4 align='center'>Unscheduled Imprints</h4>

      <% Imprint.unscheduled.find_each do |imprint| %>
        <%= link_to job_path(1), remote: true, class: 'unscheduled-imprint-link' do %>
          <div class="unscheduled-imprint" data-id="<%= imprint.id %>">
            <% if imprint.estimated? %>
              (<%= sprintf('%0.02f', imprint.estimated_time) %> Hrs, Due
              [insert job deadline here])
            <% end %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>

  <div class="col-lg-9">
    <div id='machine-calendar' data-machine="<%= @machine.id %>"></div>
  </div>
</div>


