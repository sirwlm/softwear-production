  <h1 class="heading">Listing machines</h1>

  <table class="table" id="machine-table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @machines.each do |machine| %>
        <tr>
          <td><%= machine.id %></td>
          <td><%= machine.name %></td>
          <td><%= link_to 'Show', machine %>
            <%= link_to 'Edit', edit_machine_path(machine) %>
            <%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>



  <%= link_to 'New Machine', new_machine_path %>

